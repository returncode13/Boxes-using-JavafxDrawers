<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<fx:root id="AnchorPane" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fend.app.mode.ModeController">
   <children>
      <HBox alignment="CENTER" layoutX="325.0" layoutY="187.0" style="-fx-background-color: #1e2125;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
          <Button fx:id="vesselButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#vesselButtonClicked" onMouseEntered="#highlightWithToolTipVessel" style="-fx-background-color: #181A1E;">
               <tooltip>
                  <Tooltip text="Use this mode when running PQMan on any of the vessels" wrapText="true" />
               </tooltip>
               <HBox.margin>
                  <Insets right="3.0" />
               </HBox.margin></Button>
            <Button fx:id="officeBtn" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#officeBtnClicked" onMouseEntered="#highlightWithToolTipOffice" style="-fx-background-color: #181A1E;">
               <tooltip>
                  <Tooltip text="click for use in the office and remote login(Experimental)" wrapText="true" />
               </tooltip>
               <HBox.margin>
                  <Insets right="3.0" />
               </HBox.margin></Button>
            <Button fx:id="developerBtn" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#developerBtnClicked" onMouseEntered="#highlightWithToolTipDev" style="-fx-background-color: #181A1E;">
               <tooltip>
                  <Tooltip text="developer mode." wrapText="true" />
               </tooltip></Button>
         </children>
      </HBox>
   </children>
</fx:root>
